[Unit]
Description=Germinal, a gemini server

[Service]
ExecStart=/usr/local/bin/germinal
Type=simple
Restart=always
RestartSec=10
User=nobody
PrivateTmp=yes
NoNewPrivileges=yes
ProtectSystem=full
ProtectHome=yes
ProtectDevices=yes

SystemCallFilter=@system-service
SystemCallErrorNumber=EPERM

[Install]
WantedBy=multi-user.target
